<%= layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
            <h2>Edit Your info</h2>
    <form method="post" action="/listings/<%=listing._id%>/?_method=PUT" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]"  class="form-control" value="<%=listing.title%> ">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" class="form-control" ><%=listing.description%></textarea>
        </div>

        <div class="mb-3">
            <h4>Original Listing image</h4>
            <img src="<%=OriginalImageUrl%>">
        </div>



        <div class="mb-3">
            <label for="image" class="form-label">New Image For Listing</label>
            <input type="file" name="listing[image]" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" class="form-control"  value="<%=listing.price%>">
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" class="form-control"  value="<%=listing.country%>">
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input type="text" name="listing[location]" class="form-control"  value="<%=listing.location%>">
        </div>
         
        <button class=" btn btn-dark edit-btn mt-3">Edit</button>
    </form>
    </div>
</div>
